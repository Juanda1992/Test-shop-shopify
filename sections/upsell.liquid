{% assign recommendedProducts = product.metafields.custom.recommended_products %}

{% if recommendedProducts.size > 0 %}
  <div class="upsell-products">
    <h2>Productos Recomendados</h2>
    <div class="product-list">
      {% for productId in recommendedProducts %}
        {% assign recommendedProduct = all_products[productId] %}
        <div class="product">
          <img
            src="{{ recommendedProduct.featured_image.src | product_img_url: 'medium' }}"
            alt="{{ recommendedProduct.title }}"
          >
          <h3>{{ recommendedProduct.title }}</h3>
          <p>{{ recommendedProduct.price | money }}</p>
          <a href="{{ recommendedProduct.url }}">Ver Detalles</a>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}

<style>
    .upsell-products {
      margin-top: 20px;
    }

    .product-list {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .product {
      width: 48%; /* Porcentaje para mostrar 2 productos por fila */
      margin-bottom: 20px;
      box-sizing: border-box;
      border: 1px solid #ddd;
      padding: 10px;
    }

    img {
      max-width: 100%;
      height: auto;
      margin-bottom: 10px;
    }

    h3 {
      font-size: 16px;
      margin-bottom: 8px;
    }

    p {
      font-size: 14px;
      margin-bottom: 8px;
    }

    a {
      display: inline-block;
      padding: 8px;
      background-color: #007bff;
      color: #fff;
      text-decoration: none;
      font-weight: bold;
      border-radius: 4px;
      transition: background-color 0.3s;
    }

    a:hover {
      background-color: #0056b3;
    }

    @media (min-width: 768px) {
      .product {
        width: 23%; /* Porcentaje para mostrar 4 productos por fila en escritorio */
      }
    }

    </style>

{% schema %}
{
  "name": "Upsell",
  "settings": [],
  "presets": [
    {
      "name": "upsell"
    }
  ]
}
{% endschema %}
