{% assign recommendedProducts = product.metafields.custom.products_list_reccomended %}

<div class="container h-100">
    {% if recommendedProducts.size > 0 %}
      <div class="upsell-products">
        <h2>Productos Recomendados</h2>
        <div class="card-deck">
          {% for productId in recommendedProducts %}
            {% assign recommendedProduct = all_products[productId] %}
            <div class="card">
              <img
                class="card-img-top"
                src="{{ recommendedProduct.featured_image.src | product_img_url: 'medium' }}"
                alt="{{ recommendedProduct.title }}"
              >
              <div class="card-body">
                <h5 class="card-title">{{ recommendedProduct.title }}</h5>
                <p class="card-text">{{ recommendedProduct.price | money }}</p>
                <a href="{{ recommendedProduct.url }}" class="btn btn-primary">Ver Detalles</a>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
</div>




{% schema %}
{
    "name": "Upsell",
    "class": "section-upsell",
    "settings": [],
    "presets": [
    {
      "name": "upsell"
    }
  ]
}
{% endschema %}
